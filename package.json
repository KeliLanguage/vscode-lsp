{
	"name": "keli",
	"description": "Keli extension for VSCode",
	"author": "Wong Jia Hau",
	"license": "MIT",
	"version": "0.0.8",
	"repository": {
		"type": "git",
		"url": "https://github.com/KeliLanguage/vscode-lsp"
	},
	"publisher": "wongjiahau",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"multi-root ready",
		"Programming Languages"
	],
	"engines": {
		"vscode": "^1.23.0"
	},
	"activationEvents": [
		"onLanguage:keli",
		"onCommand:keli.runThisFile"
	],
	"main": "./client/out/extension",
	"contributes": {
        "languages": [{
            "id": "keli",
            "aliases": ["Keli", "keli"],
            "extensions": [".keli"],
            "configuration": "./syntaxes/language-configuration.json"
        }],
        "grammars": [{
            "language": "keli",
            "scopeName": "source.keli",
            "path": "./syntaxes/keli.tmLanguage.json"
		}],
		"commands": [
			{
				"command": "keli.runThisFile",
				"title": "Run this file",
				"category": "Keli"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "^8.0.0",
		"tslint": "^5.11.0",
		"typescript": "^3.1.3"
	},
	"extensionDependencies": [
		"2gua.rainbow-brackets",
		"christian-kohler.path-intellisense"
	]
}
