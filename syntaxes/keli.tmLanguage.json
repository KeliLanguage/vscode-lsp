{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Keli",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#functions2"
		},
		{
			"include": "#types"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.double-slash",
			"patterns": [{
				"name": "comment.line.double-slash",
				"match": "[/][/].*"
			}]
		},
		"strings": {
			"name": "string.quoted.double.keli",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.keli",
					"match": "\\\\."
				}
			]
		},
		"types": {
			"name": "literal.type.keli",
			"patterns": [{
				"name": "entity.name.type",
				"match": "\\b[A-Z][a-zA-Z0-9]*\\b"
			}]
		},
		"functions": {
			"name": "literal.function.keli",
			"begin": "[.]",
			"end": "([\\n]|[(]|[)]|[.]|[\\s*])",
			"beginCaptures": {
				"0": { 
					"name": "variable.name"
				}
			},
			"patterns": [{
				"name": "entity.name.function",
				"match": "([(a-z)|[_]|[-!@$%^&*_+|~=:;<>?/]][a-zA-Z0-9]*)"
			},{
				"name": "keyword.control.tag.keli",
				"match": "([A-Z][a-zA-Z0-9]*)"
			}]
		},
		"functions2": {
			"name": "literal.function.keli",
			"patterns": [{
				"name": "entity.name.function",
				"match": "([(a-z)]([a-zA-Z0-9]*)(\\s*)[(])"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "storage.type.keyword.keli",
				"match": "\\b([\\$]|if|then|else|choice)\\b"
			}]
		}
	},
	"scopeName": "source.keli"
}