{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Keli",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#tag1"
		},
		{
			"include": "#tag2"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#types"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.double-slash",
			"patterns": [{
				"name": "comment.line.double-slash",
				"match": "[/][/].*"
			}]
		},
		"strings": {
			"name": "string.quoted.double.keli",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.keli",
					"match": "\\\\."
				}
			]
		},
		"types": {
			"name": "literal.type.keli",
			"patterns": [{
				"name": "entity.name.type",
				"match": "\\b[A-Z][a-zA-Z0-9]*\\b"
			}]
		},
		"functions": {
			"name": "literal.function.keli",
			"patterns": [{
				"name": "entity.name.function",
				"match": "[.]\\s*(([_]|[a-z])[a-zA-Z0-9]*)"
			},{
				"name": "entity.name.function",
				"match": "\\b(([_]|[a-z])[a-zA-Z0-9]*)\\s*[(]"
			}]
		},
		"tag1": {
			"begin": "(\\b[A-Z][a-zA-Z0-9]*)[.]",
			"end": "([\\n]|[(]|[)]|[.])",
			"beginCaptures": {
				"1": { 
					"name": "entity.name.type"
				}
			},
			"patterns": [{
				"name": "keyword.control.tag.keli",
				"match": "([A-Z][a-zA-Z0-9]*)"
			},{
				"name": "entity.name.function",
				"match": "([a-z][a-zA-Z0-9]*)"
			}]
		},
		"tag2": {
			"begin": "(case)(\\s*)([(])([.])",
			"end": "([)]|[(])",
			"beginCaptures": {
				"1": { 
					"name": "storage.type.keyword.keli"
				}
			},
			"patterns": [{
				"name": "keyword.control.tag.keli",
				"match": "([A-Z][a-zA-Z0-9]*)"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "storage.type.keyword.keli",
				"match": "\\b([$]|tags|module|default)\\b"
			}]
		}
	},
	"scopeName": "source.keli"
}